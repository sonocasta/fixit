<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="field">
    <p class="rounded-lg py-3 px-5 bg-red-600 text-white inline-block font-medium">
      <%= link_to "Sign Out", destroy_user_session_path, data: {turbo_method: :delete} %>
    </p>
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Popos</h1>
    <%= link_to 'New popo', new_popo_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="popos" class="min-w-full">
    <%= render @popos %>
  </div>
</div>
