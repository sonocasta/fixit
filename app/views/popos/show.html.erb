<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @popo %>

    <%= link_to 'Edit this popo', edit_popo_path(@popo), class: "mt-2 rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this popo', popo_path(@popo), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-300 font-medium" %>
    </div>
    <%= link_to 'Back to popos', popos_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
  </div>
</div>
